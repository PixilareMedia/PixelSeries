---
export interface Props {
	title: string;
	anchor: string;
	id: string;
}

const { id, anchor, title } = Astro.props;
---

<div class="col justify-content-center text-center info" id={id}>
    <h2 class="secondary-title">{title} Members</h2>
    <a class="anchor-link" href={anchor}>(Link)</a>
    <div class="col justify-content-center">
        <slot />
    </div>
</div>

<style>
    .justify-content-center {
        -webkit-box-pack: center!important;
        -ms-flex-pack: center!important;
        justify-content: center!important;
    }
    .text-center {
        text-align: center!important;
    }
    
    .col {
        -ms-flex-preferred-size: 0;
        flex-basis: 0;
        -webkit-box-flex: 1;
        -ms-flex-positive: 1;
        flex-grow: 1;
        max-width: 100%;
    }

    .info {
        border: 3px;
        border-color: lightslategray;
        border-style: inset;
        border-radius: 25px;
        font-size: large;
        padding: 10px;
        margin: 5px;
        background-color: rgba(51, 51, 51, 0.5);
    }
    .anchor-link {
        color: white;
        text-decoration: none;
    }
    .anchor-link:hover {
        color: rgb(70, 33, 151);
    }
</style>
