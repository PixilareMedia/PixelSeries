---
export interface Props {
	name: string;
	img: string;
	href: string;
}

const { href, name, img } = Astro.props;
---

<div class="col text-center info">
    <a class="internal-links" href={href}>
        <img class="heads" src={img} alt="An image of the person's Minecraft head provided by mc-heads.net"/>
    </a>
    <h2 class="tertiary-title">{name}</h2>
</div>

<style>
    .text-center {
        text-align: center!important;
    }

    .col {
        -ms-flex-preferred-size: 0;
        flex-basis: 0;
        -webkit-box-flex: 1;
        -ms-flex-positive: 1;
        flex-grow: 1;
        max-width: 100%;
    }

    .info {
        border: 3px;
        border-color: lightslategray;
        border-style: inset;
        border-radius: 25px;
        font-size: large;
        padding: 10px;
        margin: 5px;
        background-color: rgba(51, 51, 51, 0.5);
    }
    .heads {
        width: 25%;
        height: auto;
    }
</style>
