                        <ItemLists
                            title="Middle Row"
                            item1="1x Sugar"
                            item2="1x Phantom Membrane"
                            item3="1x Sugar"
                            item4="1x Sugar"
                            item5="1x Phantom Membrane"
                            item6="1x Sugar"
                            item7="1x Sugar"
                            item8="1x Phantom Membrane"
                            item9="1x Sugar"
                        />
                        <ItemLists
                            title="Bottom Row"
                            item1="1x Gunpowder"
                            item2="1x Gunpowder"
                            item3="1x Glistering Melon Slice"
                            item4="1x Glistering Melon Slice"
                            item5="1x Gunpowder"
                            item6="1x Glistering Melon Slice"
                            item7="1x Glistering Melon Slice"
                            item8="1x Gunpowder"
                            item9="1x Gunpowder"
                        />
                    </div>
                </div>
            </div>
        </div>
	</main>
    <Footer/>
</Layout>

