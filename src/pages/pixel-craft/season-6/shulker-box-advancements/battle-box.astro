---
import Layout from '../../../../layouts/Layout.astro';
import Navigation from '../../../../components/Navigation.astro';
import Footer from '../../../../components/Footer.astro';
import ItemLists from '../../../../components/ItemLists.astro';
---

<Layout title="Battle Box - Shulker Box Advancements - Season #6 - Pixel Craft - Pixel Series">
    <Navigation/>
	<main class="container justify-content-center text-center space-bottom">
        <div class="row justify-content-center">
            <h1 class="primary-title">Pixel Craft Season #6</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col info text-center">
                <h2>Battle Box Advancemen</h2>
                <div class="col justify-content-center">
                    <img src="/images/pixel-craft/season-6/shulker-box-advancements/battle_box.png" alt="An image of the contents of the Battle Box Advancment."/>
                    <p>This is what is required for the Battle Box Advancement. A text list of what is in the Battle Shulker Box</p>
                    <div class="row justify-content-center">
                        <ItemLists
                            title="Top Row"
                            item1="1x Netherite Shovel w/ Mending, Unbreaking 3, Efficiency 5, Silk Touch"
                            item2="64x Golden Apple"
                            item3="1x Netherite Pickaxe w/ Mending, Unbreaking 3, Efficiency 5, Silk Touch"
                            item4="1x Magic Mirror"
                            item5="1x Netherite Sword w/ Mending, Unbreaking 3, Sharpness 5, Sweeping Edge 3, Looting 3, Fire Aspect 2, Knockback 2"
                            item6="1x Recovery Compass"
                            item7="1x Netherite Pickaxe w/ Mending, Unbreaking 3, Efficiency 5, Fortune 3"
                            item8="64x Golden Apple"
                            item9="1x Netherite Hoe w/ Mending, Unbreaking 3, Efficiency 5, Fortune 3"
                        />
                        <ItemLists
                            title="Middle Row"
                            item1="Empty"
                            item2="1x Netherite Helmet w/ Mending, Unbreaking 3, Protection 4, Thorns 3, Aqua Affinity, Respiration 3"
                            item3="Empty"
                            item4="1x Netherite Chestplate w/ Mending, Unbreaking 3, Fire Protection 4, Thorns 3"
                            item5="1x Shield"
                            item6="1x Netherite Leggings w/ Mending, Unbreaking 3, Blast Protection 4, Thorns 3, Swift Sneak 3"
                            item7="Empty"
                            item8="1x Netherite Boots w/ Mending, Unbreaking 3, Projectile Protection 4, Thorns 3, Feather Falling 4, Depth Strider 3, Soul Speed 3"
                            item9="Empty"
                        />
                        <ItemLists
                            title="Bottom Row"
                            item1="1x Totem of Undying"
                            item2="1x Bow w/ Mending, Unbreaking 3, Power 5, Punch 2, Flame"
                            item3="64x Arrow"
                            item4="Empty"
                            item5="1x Netherite Axe w/ Mending, Unbreaking 3, Efficiency 5, Silk Touch"
                            item6="Empty"
                            item7="64x Spectral Arrow"
                            item8="1x Crossbow w/ Mending, Unbreaking 3, Quick Charge 3, Multishot"
                            item9="1x Totem of Undying"
                        />
                    </div>
                </div>
            </div>
        </div>
	</main>
    <Footer/>
</Layout>

<style>
    .container {
        position: absolute;
        left: 12em;
        top: 0em;
        right: 0em;
        color: white;
        font-size: large;
    }
    .justify-content-center {
        -webkit-box-pack: center!important;
        -ms-flex-pack: center!important;
        justify-content: center!important;
    }
    .text-center {
        text-align: center!important;
    }

    .row {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: 15px;
        margin-left: 15px;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .col {
        -ms-flex-preferred-size: 0;
        flex-basis: 0;
        -webkit-box-flex: 1;
        -ms-flex-positive: 1;
        flex-grow: 1;
        max-width: 100%;
    }

    .info {
        border: 3px;
        border-color: lightslategray;
        border-style: inset;
        border-radius: 25px;
        font-size: large;
        padding: 10px;
        margin: 5px;
        background-color: rgba(51, 51, 51, 0.5);
    }
    .space-bottom {
        padding-bottom: 3em;
    }
    .primary-title {
        border: 3px;
        border-color: lightslategray;
        border-style: groove;
        border-radius: 25px;
        padding: 10px;
        background-color: rgba(51, 51, 51, 0.5);
    }
</style>
