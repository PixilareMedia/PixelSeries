---
import Layout from '../../../../layouts/Layout.astro';
import Navigation from '../../../../components/Navigation.astro';
import Footer from '../../../../components/Footer.astro';
import ItemLists from '../../../../components/ItemLists.astro';
---

<Layout title="Crop Box - Shulker Box Advancements - Season #6 - Pixel Craft - Pixel Series">
    <Navigation/>
	<main class="container justify-content-center text-center space-bottom">
        <div class="row justify-content-center">
            <h1 class="primary-title">Pixel Craft Season #6</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col info text-center">
                <h2>Crop Box Advancement</h2>
                <div class="col justify-content-center">
                    <img src="/images/pixel-craft/season-6/shulker-box-advancements/crop_box.png" alt="An image of the contents of the Crop Box Advancment."/>
                    <p>This is what is required for the Crop Box Advancement. A text list of what is in the Crop Shulker Box</p>
                    <div class="row justify-content-center">
                        <ItemLists
                            title="Top Row"
                            item1="Empty"
                            item2="Empty"
                            item3="64x Pumpkin Seeds"
                            item4="64x Bone Meal"
                            item5="64x Sweet Berries"
                            item6="64x Bone Meal"
                            item7="64x Melon Seeds"
                            item8="Empty"
                            item9="Empty"
                        />
                        <ItemLists
                            title="Middle Row"
                            item1="1x Netherite Hoe w/ Mending, Unbreaking 3, Efficiency 5, Fortune 3"
                            item2="64x Wheat Seeds"
                            item3="64x Cocoa Beans"
                            item4="64x Melon"
                            item5="64x Bone Block"
                            item6="64x Pumpkin"
                            item7="64x Nether Wart"
                            item8="64x Beetroot Seeds"
                            item9="1x Netherite Hoe w/ Mending, Unbreaking 3, Efficiency 5, Fortune 3"
                        />
                        <ItemLists
                            title="Bottom Row"
                            item1="Empty"
                            item2="Empty"
                            item3="64x Potato"
                            item4="64x Bone Meal"
                            item5="64x Glow Berries"
                            item6="64x Bone Meal"
                            item7="64x Carrot"
                            item8="Empty"
                            item9="Empty"
                        />
                    </div>
                </div>
            </div>
        </div>
	</main>
    <Footer/>
</Layout>

<style>
    .container {
        position: absolute;
        left: 12em;
        top: 0em;
        right: 0em;
        color: white;
        font-size: large;
    }
    .justify-content-center {
        -webkit-box-pack: center!important;
        -ms-flex-pack: center!important;
        justify-content: center!important;
    }
    .text-center {
        text-align: center!important;
    }

    .row {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: 15px;
        margin-left: 15px;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .col {
        -ms-flex-preferred-size: 0;
        flex-basis: 0;
        -webkit-box-flex: 1;
        -ms-flex-positive: 1;
        flex-grow: 1;
        max-width: 100%;
    }

    .info {
        border: 3px;
        border-color: lightslategray;
        border-style: inset;
        border-radius: 25px;
        font-size: large;
        padding: 10px;
        margin: 5px;
        background-color: rgba(51, 51, 51, 0.5);
    }
    .space-bottom {
        padding-bottom: 3em;
    }
    .primary-title {
        border: 3px;
        border-color: lightslategray;
        border-style: groove;
        border-radius: 25px;
        padding: 10px;
        background-color: rgba(51, 51, 51, 0.5);
    }
</style>
