---
import Layout from '../../../../layouts/Layout.astro';
import Navigation from '../../../../components/Navigation.astro';
import Footer from '../../../../components/Footer.astro';
import ItemLists from '../../../../components/ItemLists.astro';
---

<Layout title="Stone Box 2 - Shulker Box Advancements - Season #6 - Pixel Craft - Pixel Series">
    <Navigation/>
	<main class="container justify-content-center text-center space-bottom">
        <div class="row justify-content-center">
            <h1 class="primary-title">Pixel Craft Season #6</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col info text-center">
                <h2>Stone Box 2 Advancement</h2>
                <div class="col justify-content-center">
                    <img src="/images/pixel-craft/season-6/shulker-box-advancements/stone_box_2.png" alt="An image of the contents of the Stone Box 2 Advancment."/>
                    <p>This is what is required for the Stone Box 2 Advancement. A text list of what is in the Stone Shulker Box 2</p>
                    <div class="row justify-content-center">
                        <ItemLists
                            title="Top Row"
                            item1="64x Mossy Cobblestone"
                            item2="64x Polished Granite"
                            item3="64x Polished Diorite"
                            item4="64x Polished Andesite"
                            item5="64x Bricks"
                            item6="64x Nether Bricks"
                            item7="64x Cracked Nether Bricks"
                            item8="64x Chiseled Nether Bricks"
                            item9="64x Red Nether Bricks"
                        />
                        <ItemLists
                            title="Middle Row"
                            item1="64x Blackstone"
                            item2="64x Polished Blackstone"
                            item3="64x Polished Blackstone Bricks"
                            item4="64x Cracked Polished Blackstone Bricks"
                            item5="64x Chiseled Polished Blackstone"
                            item6="64x Sandstone"
                            item7="64x Chiseled Sandstone"
                            item8="64x Cut Sandstone"
                            item9="64x Smooth Sandstone"
                        />
                        <ItemLists
                            title="Bottom Row"
                            item1="64x Block of Quartz"
                            item2="64x Chiseled Quartz Block"
                            item3="64x Quartz Bricks"
                            item4="64x Quartz Pillar"
                            item5="64x Smooth Quartz"
                            item6="64x Red Sandstone"
                            item7="64x Chiseled Red Sandstone"
                            item8="64x Cut Red Sandstone"
                            item9="64x Smooth Red Sandstone"
                        />
                    </div>
                </div>
            </div>
        </div>
	</main>
    <Footer/>
</Layout>

<style>
    .container {
        position: absolute;
        left: 12em;
        top: 0em;
        right: 0em;
        color: white;
        font-size: large;
    }
    .justify-content-center {
        -webkit-box-pack: center!important;
        -ms-flex-pack: center!important;
        justify-content: center!important;
    }
    .text-center {
        text-align: center!important;
    }

    .row {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: 15px;
        margin-left: 15px;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .col {
        -ms-flex-preferred-size: 0;
        flex-basis: 0;
        -webkit-box-flex: 1;
        -ms-flex-positive: 1;
        flex-grow: 1;
        max-width: 100%;
    }

    .info {
        border: 3px;
        border-color: lightslategray;
        border-style: inset;
        border-radius: 25px;
        font-size: large;
        padding: 10px;
        margin: 5px;
        background-color: rgba(51, 51, 51, 0.5);
    }
    .space-bottom {
        padding-bottom: 3em;
    }
    .primary-title {
        border: 3px;
        border-color: lightslategray;
        border-style: groove;
        border-radius: 25px;
        padding: 10px;
        background-color: rgba(51, 51, 51, 0.5);
    }
</style>
