---
import Layout from '../../../../layouts/Layout.astro';
import Navigation from '../../../../components/Navigation.astro';
import Footer from '../../../../components/Footer.astro';
import ItemLists from '../../../../components/ItemLists.astro';
---

<Layout title="Food Box - Shulker Box Advancements - Season #6 - Pixel Craft - Pixel Series">
    <Navigation/>
	<main class="container justify-content-center text-center space-bottom">
        <div class="row justify-content-center">
            <h1 class="primary-title">Pixel Craft Season #6</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col info text-center">
                <h2>Food Box Advancemen</h2>
                <div class="col justify-content-center">
                    <img src="/images/pixel-craft/season-6/shulker-box-advancements/food_box.png" alt="An image of the contents of the Food Box Advancment."/>
                    <p>This is what is required for the Food Box Advancement. A text list of what is in the Food Shulker Box</p>
                    <div class="row justify-content-center">
                        <ItemLists
                            title="Top Row"
                            item1="64x Wheat"
                            item2="64x Carrot"
                            item3="64x Potato"
                            item4="64x Beetroot"
                            item5="64x Golden Apple"
                            item6="64x Cookie"
                            item7="64x Pumpkin Pie"
                            item8="64x Dried Kelp"
                            item9="64x Sweet Berries"
                        />
                        <ItemLists
                            title="Middle Row"
                            item1="64x Bread"
                            item2="64x Golden Carrot"
                            item3="64x Baked Potato"
                            item4="64x Steak"
                            item5="1x Cake"
                            item6="64x Cooked Porkchop"
                            item7="64x Melon Slice"
                            item8="64x Apple"
                            item9="64x Glow Berries"
                        />
                        <ItemLists
                            title="Bottom Row"
                            item1="1x Beetroot Soup"
                            item2="1x Rabbit Stew"
                            item3="1x Mushroom Stew"
                            item4="64x Cooked Mutton"
                            item5="64x Cooked Chicken"
                            item6="64x Cooked Rabbit"
                            item7="16x Honey Bottle"
                            item8="64x Cooked Cod"
                            item9="64x Cooked Salmon"
                        />
                    </div>
                </div>
            </div>
        </div>
	</main>
    <Footer/>
</Layout>

<style>
    .container {
        position: absolute;
        left: 12em;
        top: 0em;
        right: 0em;
        color: white;
        font-size: large;
    }
    .justify-content-center {
        -webkit-box-pack: center!important;
        -ms-flex-pack: center!important;
        justify-content: center!important;
    }
    .text-center {
        text-align: center!important;
    }

    .row {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: 15px;
        margin-left: 15px;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .col {
        -ms-flex-preferred-size: 0;
        flex-basis: 0;
        -webkit-box-flex: 1;
        -ms-flex-positive: 1;
        flex-grow: 1;
        max-width: 100%;
    }

    .info {
        border: 3px;
        border-color: lightslategray;
        border-style: inset;
        border-radius: 25px;
        font-size: large;
        padding: 10px;
        margin: 5px;
        background-color: rgba(51, 51, 51, 0.5);
    }
    .space-bottom {
        padding-bottom: 3em;
    }
    .primary-title {
        border: 3px;
        border-color: lightslategray;
        border-style: groove;
        border-radius: 25px;
        padding: 10px;
        background-color: rgba(51, 51, 51, 0.5);
    }
</style>
