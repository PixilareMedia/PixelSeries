---
import Layout from '../../../../../layouts/Generic.astro';
import List from '../../../../../components/seasons/RecipeWorkingLists.astro';
---

<Layout title='Caramel Muffin - Food - Custom Items - Season #6 - Pixel Craft - Pixel Series' backPage='/pixel-craft/season-6/custom-items/'>
  <div class="row justify-content-center">
    <h1 class="primary-title">Pixel Craft Season #6</h1>
  </div>
  <div class="col justify-content-center">
    <div class="col info text-center">
      <h2>Caramel Muffin</h2>
      <div class="col justify-content-center">
        <img src="/images/pixel-craft/season-6/custom-items/food/caramel_muffin.png" alt="An image of the recipe for the Caramel Muffin.">
        <p>This is what is required for the Caramel Muffin recipe.</p>
        <div class="row justify-content-center">
          <List
            item1="1x Sugar"
            item2="Empty"
            item3="1x Sugar"
            item4="1x Wheat"
            item5="1x Wheat"
            item6="1x Wheat"
            item7="Empty"
            item8="Empty"
            item9="Empty"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .primary-title {
    border: 3px;
    border-color: lightslategray;
    border-style: groove;
    border-radius: 25px;
    padding: 10px;
    background: rgba(51, 51, 51, 0.5);
  }
  .info {
    border: 3px;
    border-color: lightslategray;
    border-style: inset;
    border-radius: 25px;
    font-size: large;
    padding: 10px;
    margin: 5px;
    background: rgba(51, 51, 51, 0.5);
  }
  .info:last-child {
    margin-bottom: 3em;
  }
</style>